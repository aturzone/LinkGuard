{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0.0",
    "default_locale": "en",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "declarativeNetRequest",
        "notifications"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background/main.background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content/link-scanner.js",
                "content/tooltip.js",
                "content/overlay.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png"
        },
        "default_title": "Link Guard"
    },
    "web_accessible_resources": [
        {
            "resources": ["pages/warning.html", "icons/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
